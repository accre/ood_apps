---
batch_connect:
  template: vnc
  geometry: <%= vnc_resolution.blank? ? "1024x768" : vnc_resolution.strip %>
script:
  native:
    - "-N"
    - "<%= bc_num_slots.blank? ? 1 : bc_num_slots.to_i %>"
    <% if ! bc_account.strip.empty? %>
    - "--account=<%= bc_account.strip %>"
    - "--partition=batch"
    <% else %>
    - "--partition=batch"
    <% end %>
    <% if cpuarch != "any" %>
    - "--constraint=<%= cpuarch %>"
    <% end %>
